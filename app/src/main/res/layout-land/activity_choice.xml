<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/black"
    tools:context=".Controller.ChoiceActivity">


    <Button
        android:id="@+id/choice_button_ali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/choice_text_size"
        android:background="@drawable/report_screen"
        android:text="@string/ali"/>

    <Button
        android:id="@+id/choice_button_polo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/polo_report"
        android:layout_weight="1"
        android:textSize="@dimen/choice_text_size"
        android:text="@string/polo" />


</LinearLayout>